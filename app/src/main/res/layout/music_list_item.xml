<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/devide_line"/>


    <ImageView

        android:id="@+id/music_list_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:background= "@drawable/ic_launcher" />
    <View
        android:id="@+id/music_list_selected2"
        android:layout_width="3dp"
        android:layout_height="80dp"
        android:background="@color/devide_line"
        android:layout_toRightOf="@id/music_list_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/music_list_icon"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv_music_list_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="25sp"
            android:textColor="@color/main_dark" />

        <TextView
            android:id="@+id/tv_music_list_artist"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/devide_line"
        android:layout_below="@id/music_list_icon"/>


</RelativeLayout>